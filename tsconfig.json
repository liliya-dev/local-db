{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "commonjs",                                
    "outDir": "./dist",                                  
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true  ,
    "esModuleInterop": true            
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ]
}
